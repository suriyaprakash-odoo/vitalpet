<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sync_practice_wizard_view_form" model="ir.ui.view">
        <field name="name">sync.practice.wizard.form</field>
        <field name="model">sync.practice.wizard</field>
        <field name="arch" type="xml">
            <form string="Refresh">
                <separator string="Refresh Data from Cenit."/>
                <p>Are you sure to sync the practices list?</p>
                <footer>
                    <button string='Refresh' name="sync_practices" type="object" class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
           </form>
        </field>
    </record>

    <record id="sync_practice_wizard_action" model="ir.actions.act_window">
        <field name="name">Refuse Expense</field>
        <field name="res_model">sync.practice.wizard</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="sync_practice_wizard_view_form"/>
        <field name="target">new</field>
    </record>
</odoo>