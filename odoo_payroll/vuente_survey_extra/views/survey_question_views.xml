<?xml version="1.0"?>
<openerp>
    <data>
        
        <record id="con_survey" model="ir.ui.view">
            <field name="name">survey.question.view.form.inherit.conditional</field>
            <field name="model">survey.question</field>
            <field name="inherit_id" ref="survey.survey_question_form"/>
            <field name="arch" type="xml">
                <notebook position="inside">
                    <page string="Conditions">
                        <group>
                            <field name="survey_id" invisible="True"/>
                            <field name="conditional"/>
                            <field name="conditional_question_id" domain="[('type','=','simple_choice'), ('survey_id','=',survey_id)]" attrs="{'invisible':[('conditional', '=', False)]}" />
                            <field name="conditional_option_id" attrs="{'invisible':[('conditional', '=', False)]}" domain="[('question_id','=',conditional_question_id)]"/>                    
                        </group>
                    </page>
                </notebook>
                <xpath expr="//field[@name='labels_ids']/tree" position="inside">                
                    <field name="category_ids" context="{'default_label_id': active_id}"/>
                </xpath>
            </field>
       </record>
       
   </data>
</openerp>