            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name='active'>true</field>
            <field name="doall" eval="True"/>
            <field name="model" eval="'budget.consolidate.monthly'"/>
            <field name="function" eval="'action_create_budget_consolidate_month'"/>
            <field name="args" eval="'(2,)'"/>
        </record>
        
        <record model="ir.ui.view" id="view_budget_consolidate_month_kanban">
            <field name="name">budget.consolidate.monthly.kanban</field>
            <field name="model">budget.consolidate.monthly</field>
            <field name="arch" type="xml">
                <kanban js_class="budget_kanban_view" create="0" default_group_by="month_year">
