                    <field name="actual_amount" default="sum" />
                    <field name="planned_amount" />
                    <field name="name" />
                    <field name="is_margin" />
                    <field name="var_amount_higher" />
                    <field name="var_margin_higher" />
                    <field name="var_yoy_higher" />
                    <field name="check_variance_high" />
