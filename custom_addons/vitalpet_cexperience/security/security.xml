<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data noupdate="0">
	
	  <record id="client_experience_record_rule" model="ir.rule">
            <field name="name">Client Experience</field>
            <field name="model_id" ref="vitalpet_cexperience.model_experience_visit" />
            <field eval="True" name="global" />
            <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
            <field eval="True" name="active" />
        </record>

      <record model="ir.module.category" id="module_category_client_experience">
            <field name="name">Client Experience</field>
            <field name="sequence">2</field>
        </record>

        <record id="group_client_experience_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_client_experience" />
            <field name="users" eval="[(4, ref('base.user_root'))]" />
        </record>

        <record id="group_client_experience_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_client_experience" />
            <field name="users" eval="[(4, ref('base.user_root'))]" />
            <field name="implied_ids" eval="[(4, ref('group_client_experience_user'))]"/>
        </record>
	</data>
</odoo>
