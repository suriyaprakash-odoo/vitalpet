<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_hr_loan_tree" model="ir.ui.view">
            <field name="name">hr.loan.tree</field>
            <field name="model">hr.loan</field>
            <field name="arch" type="xml">
                <tree string="Employee Loan">
                    <field name="name"/>
                    <field name="employee_id"/>                    
                    <field name="loan_type" invisible="1"/>
                    <field name="loan_amount"/>
                    <field name="request_date"/>
                    <field name="due_date"/>
                    <field name="department_id" invisible="1"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record id="view_hr_loan_form" model="ir.ui.view">
            <field name="name">hr.loan.form</field>
            <field name="model">hr.loan</field>
            <field name="arch" type="xml">
                <form string="Employee Loan" version="7.0">
                    <header>
                    	<button name="confirm_loan" string="Confirm" states="draft" type="object" groups="base.group_user" class="oe_highlight"/>
                    	<button name="make_calculation" string="Calculate" states="draft" type="object" attrs="{'invisible':[('state','!=','draft')]}" class="oe_highlight"/>
                    	<button name="set_to_cancel" string="Cancel" states="draft" type="object" groups="base.group_user"/>
                        <button name="approve_loan" string="Approve" states="open" type="object" groups="hr.group_hr_user" class="oe_highlight"/>
                        <button name="refuse_loan" string="Refuse" states="open,confirm" groups="hr.group_hr_user" type="object"/>
                        <button name="set_to_draft" string="Reset to New" states="refuse,cancel"  groups="hr.group_hr_user" type="object"/> 
                        <field name="state" widget="statusbar" statusbar_visible="draft,open,confirm"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name" class="oe_inline" attrs="{'readonly':[('state','!=','draft')]}"/></h1>
                        </div>
                        <group string="Employee Details" col="4">
                            <field name="employee_id" groups="base.group_user" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="job_id" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="department_id" attrs="{'readonly':[('state','!=','draft')]}"/>
                        </group>
                        <group>
                            <group string="Loan Details">
                                <field name="user_id" invisible="1"/>
                                <field name="loan_type" attrs="{'readonly':[('state','!=','draft')]}" invisible="1"/>
                                <field name="loan_amount" attrs="{'readonly':[('state','!=','draft')]}"/>
                                <field name="emi_based_on" attrs="{'readonly':[('state','!=','draft')]}" class="oe_inline"/>
                                <field name="loan_interest" attrs="{'readonly':[('state','!=','draft')]}" invisible="1"/>
                                <field name="percentage_of_gross" attrs="{'invisible':[('emi_based_on','!=','percentage')],'required':[('emi_based_on','=','percentage')],'readonly':[('state','!=','draft')]}"/>
                                <field name="deduction_amount" attrs="{'invisible':[('emi_based_on','=','percentage')],'required':[('emi_based_on','=','amount')],'readonly':[('state','!=','draft')]}"/>
                                <field name="amount_paid"/>
                                <field name="amount_to_pay"/>
                            </group>
                            <group string="Dates">
                                <field name="request_date" attrs="{'readonly':[('state','!=','draft')]}"/>
                               <field name="start_date" attrs="{'readonly':[('state','!=','draft')]}" required="1"/>
                                <field name="duration" attrs="{'invisible':[('emi_based_on','=','percentage')],'required':[('emi_based_on','=','duration')],'readonly':[('state','!=','draft')]}"/>
                                <field name="due_date" attrs="{'invisible':[('emi_based_on','=','percentage')],'readonly':[('state','!=','draft')]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="description" attrs="{'readonly':[('state','!=','draft')]}"/>   
                            </page>
                            <page string="Installments">
                                <field name="installment_lines" readonly="1">
                                    <tree>
                                        <field name="payslip_id"/>
                                        <field name="amount"/>
                                        <field name="date"/>                        
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_hr_loan_filter" model="ir.ui.view">
            <field name="name">hr.loan.filter</field>
            <field name="model">hr.loan</field>
            <field name="arch" type="xml">
                <search string="Search Loan">
                    <field name="name"/>
                    <separator/>
                    <filter icon="terp-check" domain="[('state','=','draft')]" string="To Approve"/>
                    <filter icon="terp-camera_test" domain="[('state','=','confirm')]" string="Approved" name="approved"/>
                    <separator/>
                    <filter string="My Loans" icon="terp-personal" name="my_loans" domain="[('employee_id.user_id','=', uid)]" help="My Loans"/>
                    <separator/>
                    <filter string="My Department Loans" icon="terp-personal+" help="My Department Loans" domain="[('department_id.manager_id','=',uid)]"/>
                    <field name="employee_id"/>
                    <field name="department_id"/>
                    <group expand="0" string="Group By...">
                        <filter name="group_name" string="Description" domain="[]" context="{'group_by':'name'}"/>
                        <filter name="group_request" string="Request Date" icon="terp-personal" domain="[]" context="{'group_by':'request_date'}"/>
                        <filter name="group_employee" string="Employee" icon="terp-personal" domain="[]" context="{'group_by':'employee_id'}"/>
                        <filter name="group_type" string="Loan Type" icon="terp-stock_symbol-selection" domain="[]" context="{'group_by':'loan_type'}"/>
                        <filter string="Department" icon="terp-personal+" domain="[]" context="{'group_by':'department_id','set_visible':True}"/>
                        <filter string="Status" icon="terp-stock_effects-object-colorize" domain="[]" context="{'group_by':'state'}"/>
                    </group>
                </search>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_employee_loan">
            <field name="name">Loan</field>
            <field name="res_model">hr.loan</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_my_loans':1}</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to define a new loan.
              </p>
            </field>
        </record>
        <menuitem id="menu_hr_loan" parent="hr.menu_hr_root" name="Loans" sequence="15"/>
        <menuitem name="Employee Loan" id="menu_employee_loan" parent="menu_hr_loan" action="action_employee_loan"/>

    </data>
</openerp>
