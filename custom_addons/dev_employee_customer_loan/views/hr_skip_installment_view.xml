<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_hr_skip_installment_tree" model="ir.ui.view">
            <field name="name">hr.skip.installment.tree</field>
            <field name="model">hr.skip.installment</field>
            <field name="arch" type="xml">
                <tree string="Employee Loan">
                    <field name="name"/>
                    <field name="employee_id"/>                    
                    <field name="loan_id"/>
                    <field name="date"/>
                </tree>
            </field>
        </record>
        <record id="view_hr_skip_installment_form" model="ir.ui.view">
            <field name="name">hr.skip.instllment.form</field>
            <field name="model">hr.skip.installment</field>
            <field name="arch" type="xml">
                <form string="Employee Loan" version="7.0">
                    <header>
                        <button name="confirm_request" string="Confirm" states="draft" type="object" class="oe_highlight"/>
                        <button name="set_to_cancel" string="Cancel" states="draft" type="object"/>
                        <button name="approve_request" string="Approve" states="open" type="object" groups="hr.group_hr_user" class="oe_highlight"/>
                        <button name="refuse_request" string="Refuse" states="open,confirm" groups="hr.group_hr_user" type="object"/>
                        <button name="set_to_draft" string="Reset to New" states="refuse,cancel" groups="hr.group_hr_user" type="object"/>  
                        <field name="state" widget="statusbar" statusbar_visible="draft,open,confirm"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name" class="oe_inline" attrs="{'readonly':[('state','!=','draft')]}"/></h1>
                        </div>
                        <group col="4">
                            <field name="employee_id" groups="base.group_user" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="loan_id" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="date" attrs="{'readonly':[('state','!=','draft')]}"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_skip_installment">
            <field name="name">Skip Installment</field>
            <field name="res_model">hr.skip.installment</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to define a new request to skip installment.
              </p>
            </field>
        </record>
        <menuitem name="Skip Installment Request" id="menu_skip_installment" parent="menu_hr_loan" action="action_skip_installment"/>
    </data>
</openerp>
