            <field name="model">partner.property</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="partner_guarantor" >
                    <group col="4">
                        <field name="property_id" context="{'p_id': True, 'partner_id': partner_id}" domain="[('parent_id', '=', partner_id), ('type', '=', 'delivery')]"/>
