<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="group_expense_user" model="res.groups">
		<field name="name">User</field>
		<field name="category_id" ref="base.module_category_hr_expense" />
		<field name="users" eval="[(4, ref('base.user_root'))]" />
	</record>

	<record id="hr_expense.group_hr_expense_user" model="res.groups">
		<field name="name">Officer</field>
		<field name="category_id" ref="base.module_category_hr_expense" />
		<field name="users" eval="[(4, ref('base.user_root'))]" />
		<field name="implied_ids" eval="[(6, 0, [ref('group_expense_user')])]" />
	</record>	

	<record id="hr_expense.group_hr_expense_manager" model="res.groups">
		<field name="name">Manager</field>
		<field name="category_id" ref="base.module_category_hr_expense" />
		<field name="implied_ids" eval="[(6, 0, [ref('hr_expense.group_hr_expense_user')])]" />
		<field name="users" eval="[(4, ref('base.user_root'))]" />
	</record>

	<delete model="ir.rule" id="hr_expense.property_rule_expense_employee"/>

        
	<record model="ir.rule" id="vitalpet_expense_user">
		<field name="name">Expense User</field>
		<field name="model_id" ref="model_hr_expense" />
		<field name="global" eval="True" />
		<field name="domain_force">['|',('employee_id.company_id','=',False),('employee_id.company_id','child_of',[user.company_id.id])]</field>

		<field name="groups" eval="[(6, 0, [ref('hr_expense.group_hr_expense_manager')])]" />
	</record>
	
        <record id="property_rule_expense_user" model="ir.rule">
            <field name="name">Employee Expense</field>
            <field name="model_id" ref="model_hr_expense"/>
            <field name="domain_force">['|',('employee_id.company_id','=',False),('employee_id.company_id','child_of',[user.company_id.id])]</field>
            <field name="groups" eval="[(4, ref('group_expense_user'))]"/>
        </record>

	<record id="expense_user_rule_receipt" model="ir.rule"> 
			<field name="name">Receipt</field>
			<field name="model_id" ref="model_hrexpense_myreceipt"/>
				
			<field name="domain_force">[]</field>
			<field name="base.group_user" eval="True"/>		
			<field name="groups" eval="[(4, ref('base.group_user'))]" />
	</record>



</odoo>
