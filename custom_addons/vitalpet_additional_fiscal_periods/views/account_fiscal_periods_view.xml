<odoo>
  
    
    <record id="view_calendar_type_tree" model="ir.ui.view">
        <field name="name">calendar.type.tree</field>
        <field name="model">calendar.type</field>
        <field name="arch" type="xml">
            <tree string="Calendar Types">
                <field name="name"/>
                
            </tree>
        </field>
    </record>
    <record id="view_calendar_type_form" model="ir.ui.view">
        <field name="name">calendar.type.form</field>
        <field name="model">calendar.type</field>
        <field name="arch" type="xml">
            <form string="Calendar Types">
            	<group>
                    <field name="name" />
                   
            	</group>
            </form>
        </field>
    </record>
    
    
    
    
    <record id="view_account_fiscal_periods_tree" model="ir.ui.view">
        <field name="name">account.fiscal.periods.tree</field>
        <field name="model">account.fiscal.periods</field>
        <field name="arch" type="xml">
            <tree string="Account Fiscal Periods">
                <field name="name"/>
                <field name="calendar_type"/>
            </tree>
        </field>
    </record>
    <record id="view_account_fiscal_periods_form" model="ir.ui.view">
        <field name="name">account.fiscal.periods.form</field>
        <field name="model">account.fiscal.periods</field>
        <field name="arch" type="xml">
            <form string="Account Fiscal Periods">
            	<header>
                    <button name="generate_weeks" string="Generate Weeks" type="object" class="oe_highlight"/>
                </header>
            	<group col="4">
            		<field name="calendar_type" />
                    <field name="name"/>
                    
            	</group>
            	<notebook>
                	<page string="Periods">
                		<group>
		                    <field name="account_fiscal_periods_ids" widget="one2many_list" mode="tree" nolabel="1">
		                    	<tree editable="bottom">
		                    		<field name="code" />
			                        <field name="year"/>
			                        <field name="name"/>
			                        <field name="quarter" />          
			                        <field name="date_start"/>
			                        <field name="date_end"/>
									<field name="closing_date_range"/>
			                    </tree>
		                    </field>
		                </group>
                	</page>
                	
                	<page string="Weeks">
                		<group>
		                    <field name="account_fiscal_period_week_ids" mode="tree" nolabel="1">
		                    	<tree editable="bottom">
			                        <field name="name"/>
			                        <field name="week_no"/>
			                        <field name="account_fiscal_period_id"/>                        
			                        <field name="date_start"/>
			                        <field name="date_end"/>
			                    </tree>
		                    </field>
		                </group>
                	</page>
                	
                </notebook>
            </form>
        </field>
    </record>
    
    
