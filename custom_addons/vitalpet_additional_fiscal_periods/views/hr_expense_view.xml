<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    	<record id="account_fiscal_periods_hr_expense_form_view" model="ir.ui.view">
            <field name="name">hr.expense.form</field>
            <field name="model">hr.expense</field>
            <field name="inherit_id" ref="hr_expense.hr_expense_form_view"/>
            <field name="arch" type="xml">
               
                <field name="date" position="after">
                	<label for="account_fiscal_periods_id"/>
                	<div class="o_row">
	                    <field name="account_fiscal_periods_id" readonly="1"/>
	                    <field name="account_fiscal_periods_quarterly" readonly="1"/>
	                    <field name="account_fiscal_period_week_id" readonly="1"/>
	                </div>
                </field>
                
                
                
            </field>
        </record>
        
        
        <record id="account_fiscal_periods_view_expenses_tree" model="ir.ui.view">
            <field name="name">hr.expense.tree</field>
            <field name="model">hr.expense</field>
            <field name="inherit_id" ref="hr_expense.view_expenses_tree"/>
            <field name="arch" type="xml">
                
                <field name="date" position="after">
                    <!-- <field name="move_month_year" invisible="1" />
                    <field name="week_of_year" invisible="1"/> -->
                	<field name="account_fiscal_periods_year"  />
                    <field name="account_fiscal_periods_quarterly" />
                    <field name="account_fiscal_periods_id"  />
                    <field name="account_fiscal_period_week_id"  />
                </field>
                
                
                
            </field>
        </record>
        
        
        <record id="account_fiscal_periods_view_hr_expense_filter" model="ir.ui.view">
            <field name="name">hr.expense.filter</field>
            <field name="model">hr.expense</field>
        	<field name="inherit_id" ref="hr_expense.view_hr_expense_filter"/>
            <field name="arch" type="xml">
            	<xpath expr="//search//group" position="inside">
            		<!-- <filter string="Fiscal Date" context="{'group_by':'move_month_year'}"/> 
            		<filter string="Week" context="{'group_by':'week_of_year'}" /> -->
            		<filter string="Fiscal Year" context="{'group_by':'account_fiscal_periods_year'}" />
            		<filter string="Fiscal Quarter" context="{'group_by':'account_fiscal_periods_quarterly'}" />
            		<filter string="Fiscal Month" context="{'group_by':'account_fiscal_periods_id'}" />
					<filter string="Fiscal Week" context="{'group_by':'account_fiscal_period_week_id'}" />
                </xpath>
            </field>
        </record>
        
        
	</data>
</odoo>