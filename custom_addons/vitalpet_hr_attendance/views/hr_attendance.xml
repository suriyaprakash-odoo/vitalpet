    <menuitem id="hr_attendance.menu_hr_attendance_kiosk_mode" name="Kiosk Mode" parent="hr_attendance.menu_hr_attendance_manage_attendances" sequence="10" groups="hr_attendance.group_hr_attendance_user,group_attendance_user" action="hr_attendance.hr_attendance_action_kiosk_mode"/>

    <menuitem id="hr_attendance.menu_hr_attendance_report" name="Reports" parent="hr_attendance.menu_hr_attendance_root" sequence="30" groups="hr_attendance.group_hr_attendance_user" action="hr_attendance.hr_attendance_action_graph"/>

  </odoo>
