<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="hr_contract_view_form_attendance_view" model="ir.ui.view">
			<field name="name">hr.contract.view.form</field>
			<field name="model">hr.contract</field>
			<field name="inherit_id" ref="payroll_contract_jobs.hr_contract_view_form" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='contract_job_ids']/tree/field[@name='job_id']"
					position="after">
					<!-- domain="[('id', 'in', seniority_ids[0][2] or False)]" -->
					<field name="seniority_id" string="Job Seniority Title" domain="[('id', 'in', seniority_ids[0][2] or False)]"  options="{'no_create' : True,'no_edit' : True}"/>
					<field name="seniority_ids" invisible="1"/>
				</xpath>
			</field>
		</record>
		
		
		
		
		


		<record id="hr_contract_view_form_inherit_view" model="ir.ui.view">
			<field name="name">hr.contract.view.form.inherit</field>
			<field name="model">hr.contract</field>
			<field name="inherit_id" ref="hr_contract.hr_contract_view_form" />
			<field name="arch" type="xml">
			<!-- 	<xpath expr="//tree" position='attributes'>
					<attribute name='clickable'>0</attribute>
				</xpath> -->

				<!-- <xpath expr="//form/header" position='inside'>
					<button name='start_contract' string='Start' type='object' class='oe_highlight'/>
				</xpath> -->

				<field name='type_id' position='after'>
					<field name="contract_renewal_due_soon" invisible='1'/>
                    <field name="contract_renewal_overdue" invisible='1'/>
                </field>
			</field>
		</record>
		
		

		<record id="hr_contract_view_tree_inherit_view" model="ir.ui.view">
			<field name="name">hr.contract.view.tree.inherit</field>
			<field name="model">hr.contract</field>
			<field name="inherit_id" ref="hr_contract.hr_contract_view_tree" />
			<field name="arch" type="xml">
				<xpath expr="//tree" position='attributes'>
					<attribute name='decoration-warning'>contract_renewal_due_soon and not contract_renewal_overdue</attribute>
					<attribute name='decoration-danger'>contract_renewal_overdue</attribute>
				</xpath>

				<field name='date_end' position='after'>
					<!-- <field name='state'/> -->
					<field name="contract_renewal_due_soon" invisible='1'/>
                    <field name="contract_renewal_overdue" invisible='1'/>
				</field>
			</field>
		</record>


		<record id="hr_contract_view_search_inherit_view" model="ir.ui.view">
			<field name="name">hr.contract.view.search.inherit</field>
			<field name="model">hr.contract</field>
			<field name="inherit_id" ref="hr_contract.hr_contract_view_search" />
			<field name="arch" type="xml">
				<filter name='to_renew' position='after'>
					<filter name="alert_true" domain="['|',('contract_renewal_due_soon','=',True),('contract_renewal_overdue','=',True)]" string="Has Alert(s)"/>
				</filter>
				
			</field>
		</record>
			


	</data>
</odoo>
