<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr.group_hr_attendance" model="res.groups">
        <field name="name">Manual Attendance</field>
        <field name="category_id" ref="base.module_category_hr_attendance"/>
        <field name="comment">The user will gain access to the human resources attendance menu, enabling him to manage his own attendance.</field>        
    </record>
	
	<record id="group_attendance_user" model="res.groups">
		<field name="name">Kiosk User</field>
		<field name="comment">Can process attendance</field>
		<field name="category_id" ref="base.module_category_hr_attendance" />
		<field name="implied_ids" eval="[(4, ref('hr.group_hr_attendance'))]" />
	</record>

    
    <record id="hr_attendance.group_hr_attendance_user" model="res.groups">
        <field name="name">Officer</field>
        <field name="category_id" ref="base.module_category_hr_attendance"/>
        <field name="implied_ids" eval="[(4, ref('vitalpet_hr_attendance.group_attendance_user'))]"/>
    </record>

    <record id="hr_attendance.group_hr_attendance_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="base.module_category_hr_attendance"/>
        <field name="implied_ids" eval="[(4, ref('hr_attendance.group_hr_attendance_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root'))]"/>
    </record>


	 <record id="kiosk_user_group_rule" model="ir.rule">
		<field name="name">Kiosk user company access</field>
		<field name="model_id" ref="hr.model_hr_job" />
		 <field name="global" eval="True"/>
		<field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
		<field name="perm_read" eval="False" />		
		<field name="groups"
			eval="[(4, ref('group_attendance_user'))]" />
	</record>
	
	 <record id="hr.hr_job_comp_rule" model="ir.rule">
        <field name="name">Job multi company rule inherit</field>
        <field name="model_id" ref="hr.model_hr_job"/>
        <field name="groups"
			eval="[
			 (4, ref('hr_recruitment.group_hr_recruitment_user')),(4, ref('hr_recruitment.group_hr_recruitment_manager')),
			 (4, ref('hr_expense.group_hr_expense_user')),(4, ref('hr_expense.group_hr_expense_manager')),
			 (4, ref('hr_holidays.group_hr_holidays_user')),(4, ref('hr_holidays.group_hr_holidays_manager')),
			 (4, ref('hr_timesheet.group_hr_timesheet_user')),			 
			 (4, ref('hr_attendance.group_hr_attendance_user')),(4, ref('hr_attendance.group_hr_attendance_manager')),
			 ]"/>   
        <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>		
    </record> 
	

</odoo>
