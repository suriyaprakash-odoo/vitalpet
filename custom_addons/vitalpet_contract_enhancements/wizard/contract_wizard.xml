<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>


		<record id="contact_enhancement_wizard_form" model="ir.ui.view">
			<field name="name">contract.enhancement.wizard</field>
			<field name="model">contract.enhancement.wizard</field>
			<field name="arch" type="xml">
				<form>
					<div>Would you like make this contract  Active? </div>
					<div>Draft contracts will not be processed </div>

					<footer>
						<button string="Yes" type="object" class="btn btn-sm btn-primary" />
						<button string="Cancel" class="btn btn-sm btn-default"
							special="cancel" />
					</footer>
				</form>
			</field>
		</record>
		<record id="contact_enhancement_wizard_action" model="ir.actions.act_window">
			<field name="name">Active</field>
			<field name="res_model">contract.enhancement.wizard</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="view_id" ref="contact_enhancement_wizard_form" />
			<field name="target">new</field>
		</record>

	</data>
</odoo>
