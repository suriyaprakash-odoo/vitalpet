<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<!-- Record Rules for hr.contract.leave.holiday.plan -->
		<record id="contract_actual_hr_contract_leave_holiday_plan_rule" model="ir.rule">
			<field name="name">Contract holidays</field>
			<field name="model_id" ref="model_hr_contract_leave_holiday_plan" />
			<field eval="True" name="global" />
			<field name="domain_force"> ['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
			<field eval="True" name="active" />
		</record>
		<!-- Record Rules for hr.contract.leave.plan.lines -->
		<record id="contract_actual_hr_contract_leave_plan_lines_rule" model="ir.rule">
			<field name="name">Contract leave</field>
			<field name="model_id" ref="model_hr_contract_leave_plan_lines" />
			<field eval="True" name="global" />
			<field name="domain_force">['|',('contract_leave_id.company_id','=',False),('contract_leave_id.company_id','child_of',[user.company_id.id])]</field>
			<field eval="True" name="active" />
		</record>
		<!-- Record Rules for hr.contract.holiday.plan.lines -->
		<record id="contract_actual_hr_contract_holiday_plan_lines_rule" model="ir.rule">
			<field name="name">Contract holiday plans</field>
			<field name="model_id" ref="model_hr_contract_holiday_plan_lines" />
			<field eval="True" name="global" />
			<field name="domain_force">['|',('contract_holiday_id.company_id','=',False),('contract_holiday_id.company_id','child_of',[user.company_id.id])]</field>
			<field eval="True" name="active" />
		</record>
		
		<record id="group_so_payment" model="res.groups">
		    <field name="name">Show Wage</field>
		    <field name="users" eval="[(4, ref('base.user_root'))]"/>
		    <field name="category_id" ref="base.module_category_extra"/>
		</record>
	</data>
</odoo>
