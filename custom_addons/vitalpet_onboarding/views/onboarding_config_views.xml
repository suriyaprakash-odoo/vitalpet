<?xml version="1.0" encoding="UTF-8"?>
<odoo>

	<record id="onboarding_settings_from" model="ir.ui.view">
		<field name="name">onboarding.config.settings.form</field>
		<field name="model">onboarding.config.settings</field>
		<field name="arch" type="xml">
			<form class="oe_form_configuration">
				<header>
					<button string="Apply" type="object" name="execute" class="oe_highlight" />
					<button string="Cancel" type="object" name="cancel" class="oe_link" />
				</header>
				<div class="row">
					<div class="col-md-12">
						<h1>Settings</h1>
					</div>
				</div>
				<group>
					<field name="onboarding_processing_company" style="width:600px" />
					<field name="hiring_manager" style="width:600px" />
					<field name="hr_supervisor" style="width:600px" />
					<field name="payroll_manager" style="width:600px"/>
					<field name="handbook_template" style="width:600px" />
					<field name="handbook_file" style="width:600px" />
					<field name="benefits_survey" style="width:600px" />
					<field name="inc_detailed_job_desc" />
					<field name="benefits_enrollment_delay" style="width:600px" />
					<field name="eligible_for_benefits" style="width:600px" />
					<field name="benefits_eligibility_desc" style="width:600px" />
				</group>
				<group string="Background Check">
					<field name="provider" style="width:650px" />
					<field name="acc_number" style="width:650px" />
					<field name="user_name" style="width:650px"/>
					<field name="password" password="True" style="width:650px" />
					<field name="return_url" style="width:650px" />
					<field name="default_service" style="width:650px" widget="many2many_tags" />
					<field name="total_cost" style="width:650px" />
				</group>				
			</form>
		</field>
	</record>
	
	<record id="action_onboarding_settings" model="ir.actions.act_window">
		<field name="name">Configure Onboarding</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">onboarding.config.settings</field>
		<field name="view_mode">form</field>
		<field name="target">inline</field>
	</record>
</odoo>