<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
	
		<record id="team_scheduler_hr_period_record_rule" model="ir.rule">
			<field name="name">Hr Period</field>
			<field name="model_id" ref="payroll_period.model_hr_period" />
			<field eval="True" name="global" />
			<field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
			<field eval="True" name="active" />
		</record>

		<record model="ir.module.category" id="module_my_practice">
			<field name="name">My Practice</field>
			<field name="description">Helps you to manage different users.</field>
			<field name="sequence">1</field>
		</record>


		<record id="group_practice_portal" model="res.groups">
            <field name="name">User(Practice Portal)</field>
            <field name="comment">Portal members have specific access rights (such as record rules and restricted menus).
                They usually do not belong to the usual Odoo groups.</field>
        </record>




		<record id="group_my_practice_user" model="res.groups">
			<field name="name">User</field>
			<field name="category_id" ref="module_my_practice" />
			<field name="users" eval="[(4, ref('base.user_root'))]" />
			<field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
		</record>



		<record id="group_my_practice_officer" model="res.groups">
			<field name="name">Practice Manager</field>
			<field name="category_id" ref="module_my_practice" />
			<field name="users" eval="[(4, ref('base.user_root'))]"/>
			<field name="implied_ids" eval="[(4, ref('group_my_practice_user'))]" />
		</record>

		<record id="group_my_practice_manager" model="res.groups">
			<field name="name">Manager</field>
			<field name="category_id" ref="module_my_practice" />
			<field name="users" eval="[(4, ref('base.user_root'))]" />
			<field name="implied_ids" eval="[(4, ref('group_my_practice_officer')),(4, ref('group_my_practice_user'))]" />
		</record>
		
		<record id="group_update_img_and_note" model="res.groups">
		    <field name="name">Update Image and Notes</field>
		    <field name="users" eval="[(4, ref('base.user_root'))]"/>
		    <field name="category_id" ref="base.module_category_extra"/>
		</record>
	</data>
</odoo>
