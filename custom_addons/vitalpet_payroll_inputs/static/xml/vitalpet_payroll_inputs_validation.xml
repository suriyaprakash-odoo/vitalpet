<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <!--
        This template is the payroll input timesheet page".
    -->
    <t t-name="vitalpet_payroll_inputs.ValidationHomePage">

        <div class="o_dashboards">
            <div class="container-fluid o_website_dashboard">
<!--             o_website_dashboard class used for append values
 -->            </div>
        </div>
    </t>

    <t t-name="vitalpet_payroll_inputs.ValidationPage">

      <style>
        .header_panel {
            background-color:white; padding-top: 10px;
            padding-right: 16px;
            padding-bottom: 10px;
            padding-left: 16px;
            background-color: white;
            border-bottom: 1px solid #a8a8a8;
        }
        .o_grid_schedule_total {
            color: white;
            background-color: #54a1ec  !important;
            text-align: right;
        }
        .o_grid_attendance_total {
            color: white;
            background-color: #7e7a7a !important;
            text-align: right;
        }
        .o_grid_work_hours_total, td.work_hours_col:last-child {
            color: white;
            background-color: #0f8c1d !important;
            text-align: right;
        }
        .o_grid_work_hours_total input, td.work_hours_col:last-child input{
            color: #8f8f8f;
        }
        .blue_color {
        	color:blue;
        }
        tr td.attendance_col:last-child, .attendance_row{
            background-color: #7e7a7a !important;
            color:#fff;
        }

        .o_search_options .o_filters_menu li.selected > span::before {
		    font-family: FontAwesome;
		    position: absolute;
		    left: 6px;
		    content: "\f00c";
		}

		.o_search_options .o_filters_menu li.selected > span {
		    color: #4d4d4d;
		    font-weight: bold;
		}

		//.open .dropdown-menu > li > span {
		    //padding: 3px 25px;
		//}
		.dropdown-menu > li > span {
		    display: block;
		    //padding: 3px 20px;
		    clear: both;
		    font-weight: normal;
		    line-height: 1.42857143;
		    color: #333333;
		    white-space: nowrap;
		}
        </style>
        <div class="o_view_manager_content">
            <div class="row header_panel">
                <div class="col-md-12">
                	<div>

                		<h4><t t-esc="values.employee_name" /></h4>
                	</div>
                    <div class="o_cp_left">
                        <div class="o_cp_buttons"><div>

                        <button
	class="grid_arrow_previous btn btn-sm btn-primary production_previous"
	type="button">
                            <span class="fa fa-arrow-left"></span>
                        </button>
                        <button
	class="grid_arrow_next btn btn-sm btn-primary production_next" type="button">
                            <span class="fa fa-arrow-right"></span>
                        </button>
                        <div class="btn-group btn-group-sm">
                            <button
	t-attf-class="grid_arrow_range btn btn-sm btn-default week_button production_weeks #{(values.week_type == 'week') and 'active'}"
	type="button" data-name="week">
                                Week
                            </button>
                            <button
	t-attf-class="grid_arrow_range btn btn-sm btn-default week_button production_weeks #{(values.week_type == 'two_weeks') and 'active'}"
	type="button" data-name="two_weeks">
                                2 Weeks
                            </button>

                        </div>
                        <div class="btn-group">Pay Period </div>
                        <div class="btn-group">

                            <select class="oe_inline payroll_period"
	style="padding-right:11px;">
                            	<t t-set="i" t-value="0" />
                            	<t t-foreach="values.payroll_periods"
	t-as="payroll_periods">
                            		<t t-set="i" t-value="i+1" />
                            		<t
	t-if="payroll_periods.id === values.current_period">
                            			<option t-att-data_id="i"
	t-att-value="payroll_periods.id" t-att-class="(payroll_periods.state == 'open') and 'blue_color'"
	selected="selected"><t t-esc="payroll_periods.name" /></option>

                            		</t>
                            		<t
	t-if="payroll_periods.id !== values.current_period">
                            			<option t-att-data_id="i"
	t-att-value="payroll_periods.id" t-att-class="(payroll_periods.state == 'open') and 'blue_color'"><t t-esc="payroll_periods.name" /></option>
                            		</t>
                            	</t>

                            </select>
                            <input name="week_no" class="week_no"
	type="hidden" t-att-value="values.week_no" />
                        </div>
                        <div class="btn-group">
                            <button
	class="grid_arrow_previous btn btn-sm btn-primary employee_previous"
	type="button">
                                <span class="fa fa-arrow-left"></span>
                            </button>
                            <span class="btn btn-sm btn-primary"
	style="cursor:default;"><span class="employee_number"><t t-esc="values.employee_number" /></span> of <t
	t-esc="values.total_employee" /></span>
                            <button
	class="grid_arrow_next btn btn-sm btn-primary  employee_next" type="button">
                                <span class="fa fa-arrow-right"></span>
                            </button>
                        </div>
                        <div class="btn-group"
	style="float:right; padding-right:11px;">
                        	<select class="filter_production" name="filter_production"
	style="padding-right:11px;">
                        		<t
	t-if="values.filter_production == 'all_production'">
                        			<option value="all_production"
	selected="selected">All Team Members</option>
                        			<option value="team_member">By Team member</option>
                        		</t>

                        		<t
	t-if="values.filter_production == 'team_member'">
                        			<option value="all_production">All Team Members</option>
                        			<option value="team_member" selected="selected">By Team member</option>
                        		</t>
                        	</select>
                        	<t t-if="values.filter_production == 'team_member'">
                       			<select name="current_employee" class="current_employee"
	style="visibility:hidden;">
	                       			<t t-set="i" t-value="0" />
	                       			<t t-foreach="values.employee_ids" t-as="employee_id">
	                       				<t t-set="i" t-value="i+1" />
	                       				<t
	t-if="employee_id.id == values.current_employee">
	                       					<option t-att-data_id="i"
	t-att-value="employee_id.id" selected="selected"><t t-esc="employee_id.name" /></option>
	                       				</t>
	                       				<t
	t-if="employee_id.id != values.current_employee">
	                       					<option t-att-data_id="i"
	t-att-value="employee_id.id"><t t-esc="employee_id.name" /></option>
	                       				</t>
	                       			</t>
                       			</select>
                       		</t>


                        </div>
                    </div>
                </div>
            </div>

                </div>
            </div>
            <div class="row col-md-12">
                 <div class="o_view_grid">
                    <table
	class="table table-condensed table-responsive table-striped">
                       <thead>
                          <tr>
                             <th class="o_grid_title_header">
                        </th>
                             <th class="o_grid_title_header"></th>
							   <t t-set="i" t-value="1" />
                              <t t-foreach="values.dates" t-as="dates">
                                <th t-att-record_date_num="i"
	t-att-record_date="dates.d2"><t t-raw="dates.d1"></t></th>
								  <t t-set="i" t-value="i+1" />
                             </t>
                             <th class="o_grid_total">Total</th>
                          </tr>
                       </thead>

                       <tbody>
                       	<t t-foreach="values.production_values" t-as="production_values">
                       		<t t-foreach="production_values.employee_bonus"
	t-as="employee_bonus">
                       			<tr>
		                             <th colspan="2">
		                                <div>
		                                   <div><t t-esc="employee_bonus.name" /></div>
		                                </div>
		                             </th>
		                             <t t-foreach="employee_bonus.t_values"
	t-as="e_values">
		                             	<td>
		                             		<div class="o_grid_cell_container"
	data-path="grid.0.0">
			                                   <i
	class="o_grid_cell_information" ></i>
			                                   <div class="o_grid_input">
			                                  																													<t
	t-if="values.current_period_state === 'done'">
														<span t-esc="e_values.amount" />
														</t>
														<t t-if="values.current_period_state !== 'done'">
															<input type="text" t-att-value="e_values.amount"
	t-att-data-job_id="e_values.job_id" t-att-data-bonus_id="e_values.bonus_id"
	t-att-data-date="e_values.date" t-att-data-employee_id="e_values.employee_id"
	class="bonus_amount" style="text-align: right;"/>
														</t>
														</div>
			                            	</div>
			                            </td>
			                         </t>

		                             <td class="o_grid_total"><t
	t-esc="employee_bonus.total_values" /></td>
			                       </tr>
                       		</t>

                     		<t t-foreach="production_values.template_bonus"
	t-as="template_bonus">
                     			<tr class="o_grid_total">
		                             <th colspan="2">
		                                <div>
		                                   <div><t t-esc="template_bonus.name" /></div>
		                                </div>
		                             </th>
		                             <t t-foreach="template_bonus.t_values"
	t-as="t_values">
			                             <td>
			                             		<div class="o_grid_cell_container"
	data-path="grid.0.0">
				                                   <i
	class=" o_grid_cell_information" ></i>
				                                   <div class="o_grid_input"><t
	t-esc="t_values" /></div>
				                            	</div>
				                            </td>
				                     </t>

		                             <td class="o_grid_total"><t
	t-esc="template_bonus.total_values" /></td>
		                        </tr>
		                    </t>

		                </t>
		                <tr class="o_grid_schedule_total">
			                	<th colspan="2">
			                		<div>
		                                   <div><t
	t-esc="values.total_production_values.name" /></div>
		                                </div>

			                	</th>
			                	<t t-foreach="values.total_production_values.values"
	t-as="tot_values">
		                           	<td>
		                           		<div class="o_grid_cell_container"
	data-path="grid.0.0">
		                                  <i
	class="fa fa-search-plus o_grid_cell_information" title="See all the records aggregated in this cell"></i>
		                                  <div class="o_grid_input"><t
	t-esc="tot_values" /></div>
		                           		</div>
		                           </td>
		                        </t>
		                        <td class="o_grid_schedule_total"><t
	t-esc="values.total_production_values.total_values" /></td>
			                </tr>
		                <!-- <t t-foreach="values.total_production_values" t-as="total_production_values">
			                <tr>
			                	<td><t t-esc="total_production_values" />asdasd</td>
			                </tr>
			            </t> -->

		                <!-- <t t-foreach="values.total_production_values" t-as="total_production_values">
			                <tr>
								 <td class="o_grid_add_line"><t t-esc="total_production_values.name"</td>
								 <td></td>
	                             <t t-foreach="total_production_values.values" t-as="values">
		                           	<td>
		                           		<div class="o_grid_cell_container" data-path="grid.0.0">
		                                  <i class="fa fa-search-plus o_grid_cell_information" title="See all the records aggregated in this cell"></i>
		                                  <div class="o_grid_input" ><t t-esc="values" /></div>
		                           		</div>
		                           </td>
		                           <td><t t-esc="total_production_values.total_values" /></td>
	 		                	</t>
		                 	</tr>
						</t> -->






                       </tbody>
                    </table>
                 </div>
              </div>
       </div>





    </t>
</templates>