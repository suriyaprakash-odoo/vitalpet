<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<record id="payroll_inputs_view_hr_payslip_form" model="ir.ui.view">
			<field name="name">hr.payslip.form</field>
			<field name="model">hr.payslip</field>
			<field name="inherit_id" ref="payroll_period.view_hr_payslip_form" />
			<field name="arch" type="xml">
				<field name='hr_period_id' position='attributes'>
					<attribute name="domain">[('state', 'not in',
						['draft','done']),('company_id', '=', company_id)]
					</attribute>
				</field>
			</field>
		</record>

		<record id="payroll_inputs_view_hr_period_form_inherit" model="ir.ui.view">
			<field name="name">hr.period.form</field>
			<field name="model">hr.period</field>
			<field name="inherit_id" ref="payroll_period.view_hr_period_form" />
			<field name="arch" type="xml">
				<xpath expr="//form/header/button[@name='button_open']"
					position="replace">
					<button name="button_open" string="Open Period" type="object"
						attrs="{'invisible': [('state','=', 'open')]}" />
				</xpath>
			</field>
		</record>



	</data>
</odoo>