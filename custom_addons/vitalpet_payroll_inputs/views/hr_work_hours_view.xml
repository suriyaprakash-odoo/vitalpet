<?xml version="1.0" encoding="utf-8"?>
<odoo>


	<!-- Form view for ResCompany in Website -->
	<record id="hr_work_hours_form_view" model="ir.ui.view">
		<field name="name">HR Work Hours Form</field>
		<field name="model">hr.work.hours</field>
		<field name="arch" type="xml">
			<form  create="false" edit="false">
				<sheet>
						<group col="4">
							<field name="employee_id" />
							<field name="job_id" />
							<field name="period_id" />
							<field name="date" />
							<field name="work_hours" />
							<field name="status" />
						</group>
				</sheet>
			</form>
		</field>
	</record>

	<record model="ir.ui.view" id="hr_work_hours_tree_view">
		<field name="name">HR Work Hours Tree</field>
		<field name="model">hr.work.hours</field>
		<field name="arch" type="xml">
			<tree string="Job Seniority Titles" create="false" edit="false">
				<field name="employee_id" />
				<field name="job_id" />
				<field name="period_id" />
				<field name="date" />
				<field name="work_hours" />
				<field name="status" />
				
			</tree>
		</field>
	</record>


	<record id="hr_work_hours_action" model="ir.actions.act_window">
		<field name="name">HR Work Hours</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">hr.work.hours</field>
		<field name="view_id" ref="hr_work_hours_tree_view" />
		<field name="view_mode">tree,form</field>
	</record>


        <menuitem id="hr_work_hours_menu" action="hr_work_hours_action" string="HR Work Hours" parent="payroll_inputs_menu_heading" sequence="11"/>



</odoo>