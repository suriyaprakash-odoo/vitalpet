<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="account_number_tree" model="ir.ui.view">
		<field name="name">Account Numbers</field>
		<field name="model">account.number</field>
		<field name="type">tree</field>
		<field name="arch" type="xml">
			<tree string="Account Numbers">
				<field name="company_id" />
				<field name="account_number" />
			</tree>
		</field>
	</record>

	<record id="view_partner_form_inherited" model="ir.ui.view">
		<field name="name">res.partner.form</field>
		<field name="model">res.partner</field>
		<field name="priority" eval="30" />
		<field name="inherit_id" ref="base.view_partner_form" />
		<field name="arch" type="xml">

			<xpath expr="//sheet" position="before">
				<header>
					<button name='send_w9_signup_link' colspan="2" class="oe_highlight"
						style="float:left;box-shadow: 1px 4px 2px 0px #c0c0c0;margin-bottom:7px;"
						string="Send W9" type="object" groups="account.group_account_user" />

					<button name='send_ach_signup_link' colspan="2" class="oe_highlight"
						style="float:left;box-shadow: 1px 4px 2px 0px #c0c0c0;margin-bottom:7px;"
						string="Sign Up ACH" type="object" groups="account.group_account_user" />
				</header>
			</xpath>

			<xpath expr="//field[@name='state_id']" position="attributes">
				<attribute name="options">{'no_create':True}}</attribute>
			</xpath>
			<xpath expr="//field[@name='email']" position="attributes">
				<attribute name="required">True</attribute>
			</xpath>

			<xpath
				expr="//notebook/page[@name='sales_purchases']/group/group[2]/field[@name='supplier']"
				position="after">
				<field name="is_1099" />

			</xpath>

			<xpath expr="//form/sheet/div[@class='oe_button_box']"
				position="inside">

				<button name="encrpyt_decrypt_values" type="object" class="oe_stat_button"
					icon="fa-archive">
					<field name="encrypt_value" widget="boolean_button"
						options='{"terminology": {"string_true": "Encrypted", "hover_true": "Decrypt", "string_false": "Decrypted", "hover_false": "Encrypt"}}' />
				</button>

			</xpath>

		</field>
	</record>

	<record id="view_partner_property_form_inherited" model="ir.ui.view">
		<field name="name">res.partner.property.form.inherit</field>
		<field name="model">res.partner</field>
		<field name="priority">2</field>
		<field name="inherit_id" ref="account.view_partner_property_form" />
		<field name="arch" type="xml">
			<page name="accounting" position="after">
				<page string="Private" name="private">
					<group>
						<field name="vat" />
						<field name="w9_form" />
						<field name="bank_name" />
						<field name="bank_routing" />
						<field name="bank_account" />
						<field name="bank_account_type" />
						<field name="ach_form" />
						<field name="is_cron" invisible="1" />
					</group>
				</page>
			</page>
			<page name="private" position="after">
				<page string="Account Numbers" name="account_number_ids">
					<group>
						<field name="account_number_ids" nolabel="1">
							<tree editable="bottom">
								<field name="company_id" />
								<field name="account_number" />
							</tree>
						</field>
					</group>
				</page>
			</page>
		</field>
	</record>

