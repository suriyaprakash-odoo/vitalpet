<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    	<record id="billpay_view_company_form" model="ir.ui.view">
            <field name="name">res.company.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/notebook" position="inside">
                    <page name='billpay_config' string='Configuration'>
    	                <group string="Billpay Configuration">
    	                     <group>
    	                         <field name="child_billpay_journal" domain="['|',('company_id', '=', id),('bill_pay_journal','=','True')]"/>
    	                     </group>
    	                 </group>
                     </page>
                </xpath>
            </field>
        </record>
	</data>
</odoo>
