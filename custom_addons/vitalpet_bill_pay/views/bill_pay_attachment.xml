<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_bill_pay_attachment_form" model="ir.ui.view">
            <field name="name">bill.pay.attachment.form</field>
            <field name="model">bill.pay.attachment</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                            <group>
                                <field name="name"/>
                            </group>
                           
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_bill_pay_attachment_tree" model="ir.ui.view">
            <field name="name">bill.pay.attachment.tree</field>
            <field name="model">bill.pay.attachment</field>
            <field name="arch" type="xml">
                <tree >
                    
                    <field name="name" />
                    
                </tree>
            </field>
        </record>

       

        <record id="action_bill_pay_attachment" model="ir.actions.act_window">
            <field name="name">Billpay Attachment</field>
            <field name="res_model">bill.pay.attachment</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_bill_pay_attachment_tree">
            </field>
            
        </record>
        
        
<!--        <menuitem id="menu_bill_pay_attachment" action="action_bill_pay_attachment" name="Email Attachments" parent="menu_bill_pay_report" sequence="100"/>
 -->        
        
        

    </data>
</odoo>