		<record id="image_view_move_form" model="ir.ui.view">
			<field name="name">account.move.form</field>
			<field name="model">account.move</field>
			<field name="inherit_id" ref="account.view_move_form" />
			<field name="arch" type="xml">

				<field name="narration" position="after">
					<label string="Description" />
					<field name="description" />

				</field>
				<field name="company_id" position="after">
					<field name="billpay_id" readonly="1" />
				</field>
				<xpath expr="//sheet//notebook" position="inside">
					<page string="Other Info">
						<group>
							<group>
								<field name="reverse_move_id" />
								<field name="dublicate_move_id" />
							</group>
						</group>

					</page>

				</xpath>
				<xpath expr="//sheet//div[@class='oe_button_box']" position="replace">
					<div class="oe_button_box">
						<button name="open_reconcile_view" class="oe_stat_button" icon="fa-bars" type="object" string="Reconciled entries">
						</button>
						<button name="action_get_attachment_view" class="oe_stat_button" type="object" icon="fa-book">
							<field name="attachment_number" widget="statinfo" string="Documents" />
						</button>
					</div>
				</xpath>

			</field>
		</record>
