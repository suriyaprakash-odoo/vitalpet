<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="refuse_reason_wizard_view_form" model="ir.ui.view">
        <field name="name">refuse.reason.wizard.form</field>
        <field name="model">refuse.reason.wizard</field>
        <field name="arch" type="xml">
            <form string="Refuse Reason">
                <field name="description"  placeholder="Additional info..." style="min-height: 120px;font-size: 16px;"/>
                <footer>
                    <button string='Refuse' name="refuse_reason" type="object" class="oe_highlight"/>
                    or
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
           </form>
        </field>
    </record>

    <record id="refuse_reason_wizard_action" model="ir.actions.act_window">
        <field name="name">Refuse Reason</field>
        <field name="res_model">refuse.reason.wizard</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="refuse_reason_wizard_view_form"/>
        <field name="target">new</field>
    </record>
</odoo>
