<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<record id="view_billpay_reversal" model="ir.ui.view">
			<field name="name">billpay.reversal.form</field>
			<field name="model">billpay.reversal</field>
			<field name="arch" type="xml">
				<form string="Billpay Reversal">
					<group>
						<field name="date" class="oe_inline" />
						<label for="account_fiscal_periods_id" class="oe_inline" />
						<div class="oe_inline">
							<field name="account_fiscal_periods_id" readonly="1" class="oe_inline" />
							<field name="account_fiscal_periods_quarterly" readonly="1" class="oe_inline" />
							<field name="account_fiscal_period_week_id" readonly="1" class="oe_inline" />
						</div>
					</group>
					<group>
						<field name="reversal_reason" required="1" />
					</group>
					<footer>
						<button string="Reverse Entries" name="reverse_moves" type="object" class="btn-primary" />
						<button string="Cancel" class="btn-default" special="cancel" />
					</footer>
				</form>
			</field>
		</record>

		<record id="action_view_billpay_reversal" model="ir.actions.act_window">
			<field name="name">Reverse Entries</field>
			<field name="res_model">billpay.reversal</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="view_id" ref="view_billpay_reversal" />
			<field name="target">new</field>
		</record>

		<!-- <record model="ir.values" id="action_billpay_reversal">
            <field name="model_id" ref="vitalpet_bill_pay.model_billpay_bills" />
            <field name="name">Reverse Billpay</field>
            <field name="key2">client_action_multi</field>
            <field name="value" eval="'ir.actions.act_window,' +str(ref('action_view_billpay_reversal'))" />
            <field name="key">action</field>
            <field name="model">billpay.bills</field>
        </record> -->
	</data>
</odoo>
