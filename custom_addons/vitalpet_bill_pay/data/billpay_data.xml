<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!--default alias for billpay-->
        <record id="mail_alias_billpay" model="mail.alias">
            <field name="alias_name">vetzipbillpay</field>
            <field name="alias_model_id" ref="model_bill_pay_attachment"/>
            <field name="alias_user_id" ref="base.user_root"/>
            <field name="alias_contact">everyone</field>
        </record>
        
        <record id="mail_alias_billpay_fax" model="mail.alias">
            <field name="alias_name">message@inbound.efax.com</field>
            <field name="alias_model_id" ref="model_bill_pay_attachment"/>
            <field name="alias_user_id" ref="base.user_root"/>
            <field name="alias_contact">everyone</field>
        </record>
        
        <record forcecreate="True" id="ir_cron_billpay_daily" model="ir.cron">
			<field name="name">Billpay Incoming Server</field>
			<field eval="False" name="active" />
			<field name="interval_number">1</field>
			<field name="interval_type">minutes</field>
			<field name="numbercall">-1</field>
			<field eval="False" name="doall" />
			<field eval="'billpay.bills'" name="model" />
			<field eval="'cron_fetch_mails_call'" name="function" />
 			<field eval="'()'" name="args" />
		</record>
    </data>
</odoo>
