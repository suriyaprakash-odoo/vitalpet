<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record model="ir.module.category" id="module_billpay_management">
		<field name="name">Bill Pay</field>
		<field name="description">Helps you handle your bill pays.</field>
		<field name="sequence">1</field>
	</record>


	<record id="group_billpay_processor" model="res.groups">
		<field name="name">Processor</field>
		<field name="comment">Can process bills, create invoices and credits,
			approves invoices credits &gt; $ amount according to settings, pay
			approved invoices
		</field>
		<field name="category_id" ref="module_billpay_management" />
		<field name="users" eval="[(4, ref('base.user_root'))]" />
		<field name="implied_ids"
			eval="[(4, ref('base.group_user')),(4, ref('account.group_account_manager'))]" />
	</record>

	<record id="group_billpay_approver" model="res.groups">
		<field name="name">Approver</field>
		<field name="comment">approves all invoices, credits > certain invoice $
			amount, manages module settings
		</field>
		<field name="category_id" ref="module_billpay_management" />
		<field name="implied_ids" eval="[(4, ref('group_billpay_processor'))]" />
	</record>

	<record id="group_billpay_manager" model="res.groups">
		<field name="name">Manager</field>
		<field name="comment">Can do all the actions as administrator</field>
		<field name="category_id" ref="module_billpay_management" />
		<field name="implied_ids" eval="[(4, ref('group_billpay_approver'))]" />
	</record>

	<record model="ir.ui.menu" id="menu_billpay_config">
		<field name="name">Configuration</field>
		<field eval="[(6,0,[ref('base.group_system')])]" name="groups_id" />
	</record>

	<data noupdate="1">
		<record id="base.default_user" model="res.users">
			<field name="groups_id" eval="[(4,ref('group_billpay_processor'))]" />
			<field name="groups_id" eval="[(4,ref('group_billpay_approver'))]" />
		</record>
	</data>


</odoo>
