<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <!--
        This template is the ribbon at the top of the Billpay Inbox that adds
        some figures to it. We call this rubbon the "Billpay Ibox".
    -->
    <t t-name="vitalpet_bill_pay.HomePage">
    	<div class="o_dashboards">
            <div class="container-fluid o_website_dashboard">
            </div>
        </div>
        
	    
    	<!-- <div class="coe_kanban_card o_kanban_record">
           <p>fsdfsdfsdf</p>
       </div> -->
    </t>
    
    <t t-name="vitalpet_bill_pay.dashboard_bills">
    	<style>
    		.o_dashboard_visits{    
    			background: #f5f5f5;
    			border: 1px solid #d8d8d8;
    			margin-bottom: 0%;
    			padding: 0.8%;
    			padding-bottom: 0%;
    		}
    		.o_dashboard_visits .col-md-4{
    		    width: 32.33333333%;
			    height: 120px;
			    margin: 0.5%;
			    padding:0% !important;
    		}
    		.last_class{
    			height: 170px !important;
    			}
    			
    		@media (max-width: 980px) {
				  .o_dashboard_visits .col-md-4 {
				     width: 49%;
			    	 height: 140px;
			    	 float: left;
				  }
    			 .last_class{
    			     height: 168px !important;
    			 }
    			
				  
			}
    		@media (max-width: 760px) {
				  .o_dashboard_visits .col-md-4 {
				     width: 100%;
			    	 height: 190px;
				  }
    			 .last_class{
    			     height: 198px !important;
    			 }
    			
				  
			}
    		.o_dashboard_visits h2 a{    
	    		padding: 3%;
			    background: #21b799;
			    color: #fff;
			    display: block;
			    font-size: 15px;
    		}
    		.bottom_box{
	    		padding: 3%;
    		}
    		.bottom_box div{
    		}
    		.bottom_box div span{
    			width:50%;
    		}
    	</style>
    	<div class="row  o_dashboard_visits">
	    		<div class="col-md-3" style="display:table;">
	    			<div style="display:table-cell;vertical-align:middle">
		    			<h2>Bills and Credits</h2>
		    			<span>Avg per day - <t t-esc="values['avg_per_day']" /></span>
	    			</div>
	    		</div>
	    		<div class="col-md-9">
		    		<div class="row">
		    			<div class="col-md-4 o_box">
		    				<h2><a href="#" class="o_dashboard_action" name="vitalpet_bill_pay.action_billpay_bills_open">Bills and Credits Open</a></h2>
		    				<div class="bottom_box">
								<div class="row">
									<div class="col-xs-6">Number of Bills </div><div class="col-xs-6"><t t-esc="values['openbills']['count']" /></div>  
									<div class="col-xs-6">Value </div><div class="col-xs-6"><t t-esc="values['currency']" /> <t t-esc="values['openbills']['total_amount']" /></div>
									<div class="col-xs-6">Bills Today </div><div class="col-xs-6"><a href="#" class="o_dashboard_action" name="vitalpet_bill_pay.action_billpay_bills_open" id='today' ><t t-esc="values['openbills']['today_bills']" /></a></div>
								</div>
							</div>
		    				
		    			</div>
		    			<div class="col-md-4 o_box">
		    				<h2><a href="#" class="o_dashboard_action" name="vitalpet_bill_pay.action_billpay_bills_approved">Bills and Credits Approve</a></h2>
		    				<div class="bottom_box">
		    				
								<div class="row">
									<div class="col-xs-6">Number of Bills </div><div class="col-xs-6"><t t-esc="values['approvedbills']['count']" /></div>  
									<div class="col-xs-6">Value </div><div class="col-xs-6"><t t-esc="values['currency']" /> <t t-esc="values['approvedbills']['total_amount']" /></div>
									<div class="col-xs-6">Bills Today </div><div class="col-xs-6"><a href="#" class="o_dashboard_action" name="vitalpet_bill_pay.action_billpay_bills_approved" id='today' ><t t-esc="values['approvedbills']['today_bills']" /> </a></div>
								</div>
								
							</div>
		    				
		    			</div>
		    			<div class="col-md-4 o_box">
		    				<h2><a href="#" class="o_dashboard_action" name="vitalpet_bill_pay.action_billpay_bills_overdue"  id='overdue'>Bills and Credits Overdue</a></h2>
		    				<div class="bottom_box">
		    				
								<div class="row">
									<div class="col-xs-6">30 Days </div><div class="col-xs-6"><a href="#" class="o_dashboard_action" name="vitalpet_bill_pay.action_billpay_bills_overdue" id='overdue_30days' ><t t-esc="values['currency']" /> <t t-esc="values['overdue30bills']['total_amount']" /> <span style="margin-left: 5%;">(<t t-esc="values['overdue30bills']['count']" />)</span></a></div>  
									<div class="col-xs-6">60 Days </div><div class="col-xs-6"><a href="#" class="o_dashboard_action" name="vitalpet_bill_pay.action_billpay_bills_overdue" id='overdue_60days' ><t t-esc="values['currency']" /> <t t-esc="values['overdue60bills']['total_amount']" /> <span style="margin-left: 5%;">(<t t-esc="values['overdue60bills']['count']" />)</span></a></div>
									<div class="col-xs-6">90 Days </div><div class="col-xs-6"><a href="#" class="o_dashboard_action" name="vitalpet_bill_pay.action_billpay_bills_overdue" id='overdue_90days' > <t t-esc="values['currency']" /> <t t-esc="values['overdue90bills']['total_amount']" /> <span style="margin-left: 5%;">(<t t-esc="values['overdue90bills']['count']" />)</span></a></div>
								</div>	
							 </div>

		    			</div>
		    		
		    		
		    			<div class="col-md-4 o_box">
		    				<h2><a href="#" class="o_dashboard_action" name="vitalpet_bill_pay.action_billpay_bills_hold">Bills and Credits Held</a></h2>
		    				<div class="bottom_box">
								<div class="row">
									<div class="col-xs-6">Number of Bills </div><div class="col-xs-6"><t t-esc="values['holdbills']['count']" /></div>  
									<div class="col-xs-6">Value </div><div class="col-xs-6"><t t-esc="values['currency']" /> <t t-esc="values['holdbills']['total_amount']" /></div>
									<div class="col-xs-6">Bills Today </div><div class="col-xs-6"><a href="#" class="o_dashboard_action" name="vitalpet_bill_pay.action_billpay_bills_hold"  id='today'><t t-esc="values['holdbills']['today_bills']" /></a></div>
								</div>							
							 </div>
		    			</div>
		    			<div class="col-md-4 o_box">
		    				<h2><a href="#" class="o_dashboard_action" name="vitalpet_bill_pay.action_billpay_bills_open">Intercompany</a></h2>
		    				<div class="bottom_box">
		    				
								<div class="row">
									<div class="col-xs-6">Balance </div><div class="col-xs-6"><a href="#" class="o_dashboard_action" name="account.action_account_moves_all_a" id='billpayintercompany'><t t-esc="values['currency']" /><t t-esc="values['balance']" /></a></div>  		
								</div>	
					
							 </div>
		    				
		    			</div>
		    			
		    		
		    		</div>
	    		</div>
	    	</div>
	    	<div class="row  o_dashboard_visits">
	    		
	    		<div class="col-md-3" style="height: 125px;display:table;">
	    			<div style="display:table-cell;vertical-align:middle">
		    			<h2>Inbox</h2>
		    			<span>Total - <t t-esc="values['total_inbox']" /></span>
	    			</div>
	    		</div>
	    		<div class="col-md-9">
		    		<div class="row">
		    			<div class="col-md-4 o_box">
		    				<h2><a href="#" class="o_dashboard_action" name="vitalpet_bill_pay.action_billpay_inbox">Inbox</a> </h2>
							
		    				<div class="bottom_box">
		    				
								<div class="row">
									<div class="col-xs-6">Number of Mails </div><div class="col-xs-6"><t t-esc="values['inbox']['count']" /></div>									
									<div class="col-xs-6">Mails Today </div><div class="col-xs-6"><a href="#" class="o_dashboard_action" name="vitalpet_bill_pay.action_billpay_inbox" id="today"><t t-esc="values['inbox']['today']" /></a></div>
								</div>
								
		    				</div>
		    			</div>
		    			<div class="col-md-4 o_box">
		    				<h2><a href="#" class="o_dashboard_action" name="vitalpet_bill_pay.action_account_payable">Payables</a></h2>
							
		    				<div class="bottom_box">
								<div class="row">
									<div class="col-xs-6">No. of Payables </div><div class="col-xs-6"><t t-esc="values['payables']['count']" /></div>									
									<div class="col-xs-6">Value </div><div class="col-xs-6"><t t-esc="values['currency']" /> <t t-esc="values['payables']['total_amount']" /></div>
								</div>		    				
							</div>
		    				
		    			</div>
		    			<div class="col-md-4 o_box">
		    				<h2><a href="#" class="o_dashboard_action" name="vitalpet_bill_pay.action_account_receivable">Receivables</a></h2>
							
		    				<div class="bottom_box">
								<div class="row">
									<div class="col-xs-6">No. of Receivables </div><div class="col-xs-6"><t t-esc="values['receivables']['count']" /></div>									
									<div class="col-xs-6">Value </div><div class="col-xs-6"><t t-esc="values['currency']" /> <t t-esc="values['receivables']['total_amount']" /></div>
								</div>		    				
							</div>
		    		
		    			</div>
		    		
		    		</div>
		    		
		    		
	    		</div>
	    	</div>
	    
	    
	    	<div class="row  o_dashboard_visits">
	    	
	    		<div class="col-md-3" style="height: 125px;display:table;">
	    			<div style="display:table-cell;vertical-align:middle">
		    			<h2>Vendors</h2>
	    			</div>
	    		</div>
	    		
	   
	    		<div class="col-md-9">
		    		<div class="row">
		    			<div class="col-md-4 o_box last_class">
		    				<h2><a href="#" class="o_dashboard_action" name="base.action_partner_supplier_form">Total Vendors</a> </h2>
		    				
		    				
		    				<div class="bottom_box">
								<div class="row">
									
									
									<div class="col-xs-6">Total Vendors </div>
									<div class="col-xs-6"><t t-esc="values['vendors']['count']" />
										<span>
											<button class="btn btn-primary btn-sm add_new_vendor" style="text-align: right; margin-top: -25px; margin-left:10px;">
		                                    	<span>Add New</span>
		                                	</button>
		                                </span>
	                                </div>	
																	
									<div class="col-xs-6">Manual Payment </div>
									<div class="col-xs-2"><a href="#" class="o_dashboard_action" name="base.action_partner_supplier_form" id="manual_payment"><t t-esc="values['vendors']['manual_payment_count']" /></a></div> 
									<div class="col-xs-4"><t t-esc="values['vendors']['manual_payment_percentage']" />%</div>
																	
									<div class="col-xs-6">ACH </div>
									<div class="col-xs-2"><a href="#" class="o_dashboard_action" name="base.action_partner_supplier_form" id="ach"><t t-esc="values['vendors']['ach_count']" /></a></div> 
									<div class="col-xs-4"><t t-esc="values['vendors']['ach_percentage']" />%</div>
									
									<div class="col-xs-6">eCheck </div>
									<div class="col-xs-2"><a href="#" class="o_dashboard_action" name="base.action_partner_supplier_form" id="echeck"><t t-esc="values['vendors']['echeck_count']" /></a></div> 
									<div class="col-xs-4"><t t-esc="values['vendors']['echeck_percentage']" />%</div>
																	
									<div class="col-xs-6">No Activity in 12 Months </div>
									<div class="col-xs-2"><t t-esc="values['vendors']['no_activity']" /></div> 
									<div class="col-xs-4"><t t-esc="values['vendors']['no_activity_percentage']" />%</div>								
								</div>

							
							</div>
		    			</div>
		    			
		    		
		    		</div>
		    		
		    		
	    		</div>
	    	</div>
	    
    
    </t>
</templates>