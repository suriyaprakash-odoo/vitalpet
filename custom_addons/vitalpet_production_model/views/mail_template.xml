<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="production_validation_notification" model="mail.template">
			<field name="name">Production Validation Notification</field>
			<field name="subject">Production Update</field>
			<field name="email_to">${object.employee_id.work_email},financeHR@vitalpet.com, mAlbert@vitalpet.com}</field>
			<field name="model_id" ref="vitalpet_production_model.model_hr_production_line" />
			<field name="auto_delete" eval="False" />
			<field name="body_html">
				<![CDATA[
                    ${ctx['body_content'] | safe}
                ]]>
			</field>
		</record>
		
		 <record id="mt_production_sent" model="mail.message.subtype">
            <field name="name">Production sent</field>
            <field name="res_model">hr.production.line</field>
            <field name="default" eval="False"/>
            <field name="description">Production Sent</field>
        </record>

	</data>
</odoo>