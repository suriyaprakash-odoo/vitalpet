<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="view_hr_payslip_form_inherit" model="ir.ui.view">
			<field name="name">hr.payslip.period.form</field>
			<field name="model">hr.payslip</field>
			<field name="inherit_id" ref="payroll_base.view_hr_payslip_form" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='hr_period_id']" position="replace">
					<field name="hr_period_id" required="1"
						domain="[('state', 'in',('open','inputs')),('company_id', '=', company_id)]" />
				</xpath>
			</field>
		</record>

		<record id="vba_view_hr_payslip_form" model="ir.ui.view">
			<field name="name">hr.payslip.view.form</field>
			<field name="model">hr.payslip</field>
			<field name="inherit_id" ref="payroll_base.view_hr_payslip_form" />
			<field name="arch" type="xml">
				<!-- <button name="compute_sheet" position="after">
					<button string="HR Rule" name="hr_rule" type="object" states="draft" class="oe_highlight"/>
				</button> -->
				<field name="worked_days_line_ids" position="after">
					<separator string="Production" />
					<group>
						<div class="oe_right oe_button_box">
							<button string="Import from Production" name="import_production"
								type="object" />
						</div>

					</group>
					<field name="production_line_ids">
						<tree editable="bottom">
							<field name="date" />
							<field name="job_position" />
							<field name="production_type" />
							<field name="name" />
							<field name="amount" />
						</tree>
					</field>
				</field>
			</field>
		</record>


	</data>
</odoo>