<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
	<!-- Record Rules for staff.planning -->
		<record id="team_scheduler_staff_planning_record_rule" model="ir.rule">
			<field name="name">Team Scheduler staff</field>
			<field name="model_id" ref="model_staff_planning" />
			<field eval="True" name="global" />
			<field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
			<field eval="True" name="active" />
		</record>
	<!-- Record Rules for actual.labour.cost -->
		<record id="team_scheduler_actual_labour_cost_record_rule" model="ir.rule">
			<field name="name">Team Scheduler labour</field>
			<field name="model_id" ref="model_actual_labour_cost" />
			<field eval="True" name="global" />
			<field name="domain_force"> ['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
			<field eval="True" name="active" />
		</record>
	<!-- Record Rules for actual.labor.weekly -->
		<record id="team_scheduler_actual_labor_weekly_record_rule" model="ir.rule">
			<field name="name">Team Scheduler staff</field>
			<field name="model_id" ref="model_actual_labor_weekly" />
			<field eval="True" name="global" />
			<field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
			<field eval="True" name="active" />
		</record>
	<!-- Record Rules for hr.holidays.public -->
		<record id="hr_holidays_public_record_rule" model="ir.rule">
			<field name="name">Hr Public Holidays</field>
			<field name="model_id" ref="model_hr_holidays_public" />
			<field eval="True" name="global" />
			<field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
			<field eval="True" name="active" />
		</record>
		
		

		<record id="group_my_practice_manager_approval" model="res.groups">
			<field name="name">Officer Schedule Approval</field>
			<field name="category_id" ref="vitalpet_mypractice.module_my_practice" />
			<field name="users" eval="[(4, ref('base.user_root'))]" />
			<field name="implied_ids" eval="[(4, ref('vitalpet_mypractice.group_my_practice_officer')),(4, ref('vitalpet_mypractice.group_my_practice_user'))]" />
		</record>
				
		

		<record id="vitalpet_mypractice.group_my_practice_manager" model="res.groups">
			<field name="name">Manager</field>
			<field name="category_id" ref="vitalpet_mypractice.module_my_practice" />
			<field name="users" eval="[(4, ref('base.user_root'))]" />
			<field name="implied_ids" eval="[(4, ref('vitalpet_team_scheduler.group_my_practice_manager_approval')),(4, ref('vitalpet_mypractice.group_my_practice_officer')),(4, ref('vitalpet_mypractice.group_my_practice_user'))]" />
		</record>
		
		
	</data>
</odoo>
