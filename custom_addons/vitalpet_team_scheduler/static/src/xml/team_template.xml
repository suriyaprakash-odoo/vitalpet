<?xml version="1.0" encoding="UTF-8"?>
<templates>

    <t t-name="widget_top_dates">
    
		<table style="width:100%;display: inline-table;width:100%;">
		    <tbody class="sub_widget_dates">
		    
		<tr style="background: #eeeeee;">
		    <th></th>
		    <th>Percentage</th>		
		    <t t-foreach="dates.dates" t-as="date">		    
		        <th  t-if="date.holiday == 0"><t t-raw="date.d1"></t></th>
		        <th  t-if="date.holiday == 1" style="background:#ff7070;color:#fff"><t t-raw="date.d1"></t></th>
		    </t>		
		    <th>OT</th>
		    <th>Total</th>
		</tr>
		
		<tr style="background-color: #0B0B61;color: #fff;">
		    <td style="text-align: left">Labor Budget</td>
		    <td style="color:white">
		    	[<span class="lastYearBudget"><t t-raw="dates.percent" ></t></span>%]
		    </td>		
		    <t t-foreach="dates.budget" t-as="budget">
		        <td>
		            <t t-raw="budget"></t>
		        </td>
		    </t>
		    <td></td>
		    <td><t t-raw="dates.budget_tot"></t></td>
		</tr>
		
		<tr style="background-color: rgb(155, 194, 230); color: rgb(255, 255, 255);">
		    <td style="text-align: left">Labor Forecast</td>
		    <td></td>		
		    <t t-foreach="dates.labour_forcast" t-as="value">
		        <th><t t-raw="value"></t></th>
		    </t>
		    <td><t t-raw="dates.ot_vals"></t></td>
		    <th><t t-raw="dates.lab_forecast_tot"></t></th>
		</tr>
		
		<tr style="background-color: #0000ff;color: #FFFFFF;">
		    <td style="text-align: left">Budget Revenue</td>
		    <td></td>
		    <t t-foreach="dates.budget_rev" t-as="budget_rev">
		        <td>
		            <t t-raw="budget_rev"></t>
		        </td>
		    </t>
		    <td></td>
		    <td><t t-raw="dates.budget_rev_tot_cost"></t></td>
		</tr>
		<tr style="background-color: #008900;color: #FFFFFF;">
		    <td style="text-align: left">Revenue Needed to Support Labor Forecast
		    </td>
		    <td></td>		
		    <t t-foreach="dates.revenue_labour_forcast" t-as="value">
		        <th class=" daysheader " data-id="0">
		            <t t-raw="value"></t>
		        </th>
		    </t>		
		    <td></td>
		    <th><t t-raw="dates.rev_support_tot"></t></th>
		
		</tr>
		
		<t t-foreach="dates.jobs" t-as="job">		
		    <tr  style="background-color:#BDD7EE">
		        <td>
		            <a class="job_positions_click" t-att-display_id="job.id" style="cursor: pointer;">
		                <t t-raw="job.name"></t>
		            </a>
		        </td>
		        <td></td>		
		        <t t-foreach="job.work_hours" t-as="work_hours">
		            <t t-if="work_hours.tot_hrs">
		                <td>
		                    <span><t t-raw="work_hours.tot_hrs" ></t></span>
		                </td>
		            </t>
		            <t t-if="work_hours.amt_tot_hrs">
		                <td>
		                    <span><t t-raw="work_hours.amt_ot_hrs" ></t></span>
		                </td>
		                <td>
		                    <span><t t-raw="work_hours.amt_tot_hrs" ></t></span>
		                </td>
		            </t>
		        </t>
		
		    </tr>
		    <tr>
		        <td>Work Hours</td>
		        <td></td>
		
		        <t t-foreach="job.work_hours" t-as="work_hours">
		            <t t-if="work_hours.hrs">
		                <td>
		                    <span><t t-raw="work_hours.hrs" ></t></span>
		                </td>
		            </t>
		            <t t-if="work_hours.amt_hrs">
		                <td>
		                    <span></span>
		                </td>
		                <td>
		                    <span><t t-raw="work_hours.amt_hrs" ></t></span>
		                </td>
		            </t>
		        </t>
		
		    </tr>
		    <tr>
		        <td>Paid Leave</td>
		        <td></td>
		
		        <t t-foreach="job.work_hours" t-as="work_hours">
		            <t t-if="work_hours.pto_hrs">
		                <td>
		                    <span><t t-raw="work_hours.pto_hrs" ></t></span>
		                </td>
		            </t>
		            <t t-if="work_hours.amt_pto_hrs">
		                <td>		                    
		                    <span></span>
		                </td>
		                <td>
		                    <span><t t-raw="work_hours.amt_pto_hrs" ></t></span>
		                </td>
		            </t>
		        </t>		
		    </tr>
		    <tr>
		        <td>Total</td>
		        <td></td>
		
		        <t t-foreach="job.work_hours" t-as="work_hours">
		            <t t-if="work_hours.tot_hrs">
		                <td>
		                    <span><t t-raw="work_hours.tot_hrs" ></t></span>
		                </td>
		            </t>
		            <t t-if="work_hours.amt_tot_hrs">
		                <td>
		                    <span></span>
		                </td>
		                <td>
		                    <span><t t-raw="work_hours.amt_tot_hrs" ></t></span>
		                </td>
		            </t>
		        </t>
		
		    </tr>
		
		</t>     
    </tbody>
    </table>
    
    <div style="text-align:center">
	    <t t-if="dates.week_no==1">
			<a class="next_btn" style="font-size: 22px;"><i class="fa fa-arrow-circle-right" aria-hidden="true"></i></a>
		</t>
		<t t-if="dates.week_no==2">
			<a class="prev_btn" style="font-size: 22px;"><i class="fa fa-arrow-circle-left" aria-hidden="true"></i></a>
		</t>
	</div>
	
    </t>
    
    
    <t t-name="sch_template">
    	<style style="display:none;">
		    .sub_widget_dates td,
		    .sub_widget_dates th {
		        padding: 5px 6px;
		    }
		</style>
		
		<p>
		    <div class="sub_widget"></div>
		</p>

		    <div class="sub_widget_dates" style="width: 100%;margin-top: -37px;">
		
		    </div>
		

    </t>
</templates>
