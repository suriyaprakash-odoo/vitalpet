<?xml version="1.0" encoding="utf-8" ?>
<odoo>

	<record id="view_applicant_form_inherited_experience" model="ir.ui.view">
		<field name="name">hr.applicant.form</field>
		<field name="model">hr.applicant</field>
		<field name="inherit_id" ref="hr_recruitment.crm_case_form_view_job" />
		<field name="arch" type="xml">
			<field name="availability" position="after">
				<field name="academic_info_dict" invisible="1" />
				<field name="professional_info_dict" invisible="1" />
				<field name="certification_info_dict" invisible="1" />
			</field>
			<field name="company_id" position="after">
				<field name="job_id_country_id" invisible='1'/>
			</field>
			<xpath expr="//sheet" position="inside">
				<notebook>
					<page string="Experience">
						<group string="Academic Experience">
						</group>
							<field name="academic_experience_ids">
								<tree editable="bottom">
									<field name="academics" />
									<field name="institute" />
									<field name="diploma" />
									<field name="field_of_study" />
									<field name="start_date" />
									<field name="end_date" />
								</tree>
							</field>
						<group string="Professional Experience">
						</group>
							<field name="professional_experience_ids">
								<tree editable="bottom">
									<field name="position" />
									<field name="employer" />
									<field name="start_date" />
									<field name="end_date" />
								</tree>
							</field>
						<group string="Certifications">
						</group>
							<field name="certification_ids" context="{'default_country_id': job_id_country_id}">
								<tree editable="bottom" >
									<field name="certifications" />
									<field name="certification_number" />
									<field name="issued_by" />
									<field name="professional_license" />
									<field name="country_id" invisible='1'/>
									<field name="state_issued_id" domain="[('country_id', '=', country_id)]"/>
									<field name="start_date" />
									<field name="end_date" />
								</tree>
							</field>
					</page>
				</notebook>
			</xpath>
		</field>
	</record>

	<function model="ir.model.fields" name="formbuilder_whitelist">
        <value>hr.applicant</value>
        <value
            eval="[
                'academic_info_dict',
                'professional_info_dict',
                'certification_info_dict'
            ]" />
    </function>

</odoo>