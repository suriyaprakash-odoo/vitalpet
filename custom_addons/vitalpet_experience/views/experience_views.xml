							<field name="employee" />
							<field name="academics" />
							<field name="institute" />
							<field name="diploma" />
						</group>
						<group>
							<field name="field_of_study" />
							<field name="start_date" />
							<field name="end_date" />
						</group>
					</group>
				</sheet>
			</form>
		</field>
	</record>

