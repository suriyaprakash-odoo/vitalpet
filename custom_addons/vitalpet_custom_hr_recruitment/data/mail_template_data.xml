<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data noupdate="1">
	
		<!--default alias for billpay-->
        <record id="mail_alias_recruitment" model="mail.alias">
            <field name="alias_name">odoorecruiter</field>
            <field name="alias_model_id" ref="model_hr_applicant"/>
            <field name="alias_user_id" ref="base.user_root"/>
            <field name="alias_contact">everyone</field>
        </record>
		<!--Email template -->

		<record id="email_offer_letter_template" model="mail.template">
			<field name="name">Offer Letter Template</field>
			<field name="email_from">${object.get_from_email()}</field>
			<field name="subject">Offer Letter[APP${object.id}]</field>
			<field name="email_to">${object.email_from}</field>
			
			<field name="model_id" ref="vitalpet_custom_hr_recruitment.model_hr_applicant" />
			<field name="auto_delete" eval="True" />
			<!--<field name="report_template" ref="report_hr_recruitment"/> -->
			<!--<field name="report_name">Offer Letter</field> -->
			<field name="body_html">
            	<![CDATA[
					<p>Dear ${object.name}</p>
					<p>
						I’m very pleased to announce that ${object.partner_name} will be joining us as a ${object.job_id.name}.
						Please welcome him/her and help him/her finding his/her marks.
					</p>
				]]>
			</field>
		</record>

        <record id="email_hr_recruitment_welcome" model="mail.template">
            <field name="name">Welcome Mail</field>
            <field name="email_from">${object.get_from_email()}</field>
            <field name="subject">Welcome Mail[APP${object.id}]</field>
            <field name="email_to">${object.email_from}</field>
            <field name="model_id" ref="vitalpet_custom_hr_recruitment.model_hr_applicant" />
            
            <field name="auto_delete" eval="True" />
            <field name="body_html">
                <![CDATA[
                    <p>Dear ${object.name}</p>
                    <p>
                        Welcome...
                    </p>
                ]]>
            </field>
        </record>

        <record id="applicant_acknowledgement_mail_template" model="mail.template">
            <field name="name">Application Acknowledgement Email Template</field>
            <field name="email_from">admin@vitalpet.com</field>
            <field name="subject">Thank you for your application at ${object.company_id.name}</field>
            <field name="email_to">${object.email_from}</field>
            <field name="model_id" ref="vitalpet_custom_hr_recruitment.model_hr_applicant" />
            <field name="auto_delete" eval="True" />
            <field name="body_html">
                <![CDATA[
                    <p>Hi ${object.name},</p>
                    <p>Thank you for applying to the ${object.job_id.job_template.name} position at ${object.company_id.name}.</p>
                    <p>We’d like to inform you that we received your application. Our hiring team is currently reviewing all applications and If you are among qualified candidates, we will reach out to you via information provided. In any case, we will keep you posted on the status of your application.</p>
                    <p>Thank you, again, for taking the time to apply to this role at ${object.company_id.name}.</p>
                    <p><b>Kind regards,</b></p>
                    <p><b>Your VitalPet and ${object.company_id.name} Team</b></p>
                    <i><p>"Celebrating and Protecting the Lifelong Love of pets"<i></p>
                ]]>
            </field>
        </record>

		<record id="email_template_data_applicant_refuse" model="mail.template">
			<field name="name">Applicant: Refused</field>
			<field name="email_from">${object.get_from_email()}</field>
			<field name="subject">Application refused [APP${object.id}]</field>
			<field name="email_to">${object.email_from}</field>
			<field name="model_id" ref="hr_recruitment.model_hr_applicant" />

			<field name="user_signature" eval="False" />
			<field name="body_html"><![CDATA[
<p>Dear ${object.name or 'applicant'},</p>
<p>Thank you for your enquiry.<br />
Unfortunately, your profile does not match with our needs</p>
<p>If you have any questions, please let us know.</p>
<p>Best regards,</p>]]></field>
		</record>

		<record id="email_template_data_applicant_interest" model="mail.template">
			<field name="name">Applicant: Interest</field>
			<field name="email_from">${object.get_from_email()}</field>
			<field name="subject">Application approved [APP${object.id}]</field>
			<field name="email_to">${object.email_from}</field>
			<field name="model_id" ref="hr_recruitment.model_hr_applicant" />
			<field name="user_signature" eval="False" />

			<field name="body_html"><![CDATA[
<p>Dear ${object.name or 'applicant'},</p>
<p>Thank you for your enquiry.<br />
Your resume got our interest. I will contact you as soon as possible to plan
next steps of the recruitment process.</p>
<p>If you have any questions, please let us know.</p>
<p>Best regards,</p>]]></field>
		</record>

		<record id="email_template_data_applicant_employee" model="mail.template">
			<field name="name">Applicant: Welcome new employee</field>
			<field name="email_from">${object.get_from_email()}</field>
			<field name="subject">Welcome ${object.name} [APP${object.id}]</field>
			<field name="model_id" ref="hr.model_hr_employee" />

			<field name="body_html"><![CDATA[
<p>Dear all,</p>
<p>I’m very pleased to announce that <strong> ${object.name} </strong> will be
joining us as a ${object.job_id.name}
%if object.department_id:
    in ${object.department_id.name}.
%endif
.</p>
<p>Please welcome him/her and help him/her finding his/her marks.</p>]]></field>
		</record>


		<record id="email_template_hr_recruitment" model="mail.template">
			<field name="name">Applicant: appointed</field>
			<!--Fixme Get from mail server configuration -->
			<field name="email_from">${object.get_from_email()}</field>
			<field name="subject">Letter for Appointment [APP${object.id}]</field>
			<field name="email_to">${object.email_from}</field>
			<field name="model_id" ref="vitalpet_custom_hr_recruitment.model_hr_applicant" />
			<field name="auto_delete" eval="False" />

			<field name="body_html"><![CDATA[
                <p>Dear ${object.name or 'applicant'},</p>
                <p>This letter is to inform you that we have received your application for the job for the ________ (post applied for) post in our company and hence we’d like to appoint you for the interview on __________(date of the interview) at ________ (time of the interview) in the morning. You are required to bring with yourself, all the documents and other necessities that have been mentioned to you earlier also.

                </p><br/><p>We expect your presence on the given date. If you have any kind of problem with the given date, you have to contact our official and write another application in order to get a new date. Any kind of delays in your processes will lead to cancellation of your appointment.</p>
                <p>Best regards,</p>]]>
			</field>
		</record>


