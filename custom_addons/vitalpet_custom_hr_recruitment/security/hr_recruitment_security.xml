<?xml version="1.0" encoding="utf-8"?>
<odoo>
	
	<record id="group_hr_recruitment_recruiter" model="res.groups">
		<field name="name">Recruiter</field>
		<field name="category_id" ref="base.module_category_hr_recruitment" />
		<field name="users" eval="[(4, ref('base.user_root'))]" />
	</record>

	<function name="write" model="ir.model.data">
		<function name="search" model="ir.model.data">
			<value eval="[('module', '=', 'hr_recruitment'), ('name', '=', 'group_hr_recruitment_user')]" />
		</function>
		<value eval="{'noupdate': False}" />
	</function>

	<record id="hr_recruitment.group_hr_recruitment_user" model="res.groups">
		<field name="name">Officer</field>
		<field name="category_id" ref="base.module_category_hr_recruitment" />
		<field name="users" eval="[(4, ref('base.user_root'))]" />
		<field name="implied_ids" eval="[(6, 0, [ref('group_hr_recruitment_recruiter')])]" />
	</record>


	<function name="write" model="ir.model.data">
		<function name="search" model="ir.model.data">
			<value eval="[('module', '=', 'hr_recruitment'), ('name', '=', 'group_hr_recruitment_user')]" />
		</function>
		<value eval="{'noupdate': True}" />
	</function>
	

	<record id="hr_recruitment.group_hr_recruitment_manager" model="res.groups">
		<field name="name">Manager</field>
		<field name="category_id" ref="base.module_category_hr_recruitment" />
		<field name="users" eval="[(4, ref('base.user_root'))]" />
		<field name="implied_ids"
			eval="[(6, 0, [ref('hr_recruitment.group_hr_recruitment_user')])]" />
	</record>

	<record id="recruiter_user_rule" model="ir.rule">
		<field name="name">Recruiter User Rule</field>
		<field name="model_id" ref="model_hr_job" />
		<field name="group_hr_recruitment_recruiter" eval="True" />
		<field name="domain_force">
			['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]
		</field>
	</record>

	<record id="officer_user_rule" model="ir.rule">
		<field name="name">Officer Rule</field>
		<field name="model_id" ref="model_hr_job" />
		<field name="hr_recruitment.group_hr_recruitment_user" eval="True" />
		<field name="domain_force">
			['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]
		</field>
	</record>


    <record id="attachment_record_rule" model="ir.rule">
        <field name="name">Ir Attachment</field>
        <field name="model_id" ref="vitalpet_custom_hr_recruitment.model_ir_attachment" />
        <field eval="True" name="global" />
        <field name="domain_force">['|',('company_id_name','=',False),('company_id_name','child_of',[user.company_id.id])]</field>
        <field eval="True" name="active" />
    </record>


	<!-- <record id="hr_appraisal.survey_input_users_access" model="ir.rule"> 
		<field name="model_id" ref="survey.model_survey_user_input"/> <field name="domain_force">[(1,'=',1)]</field> 
		</record> -->

	<record id="survey.survey_input_users_access" model="ir.rule">
		<field name="name">Access to user_input for regular users (test)
		</field>
		<field name="model_id" ref="survey.model_survey_user_input" />
		<field name="domain_force">[(1,'=',1)]</field>
		<field name="groups" eval="[(4, ref('survey.group_survey_user'))]" />
		<field eval="0" name="perm_unlink" />
		<field eval="0" name="perm_write" />
		<field eval="1" name="perm_read" />
		<field eval="0" name="perm_create" />
	</record>


	<record id="manager_user_rule" model="ir.rule">
		<field name="name">Manager Rule</field>
		<field name="model_id" ref="model_hr_job" />
		<field name="hr_recruitment.group_hr_recruitment_manager" eval="True" />
		<field name="domain_force">
			['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]
		</field>
	</record>

	<record id="survey.survey_input_public_access" model="ir.rule">
        <field name="name">Public access to user_input</field>
        <field name="model_id" ref="survey.model_survey_user_input"/>
        <field name="domain_force">[]</field>
        <field name="groups" eval="[(4, ref('base.group_public'))]"/>
        <field eval="0" name="perm_unlink"/>
        <field eval="0" name="perm_write"/>
        <field eval="1" name="perm_read"/>
        <field eval="0" name="perm_create"/>
    </record>



	<record id="hr_recruitment.menu_hr_recruitment_root" model="ir.ui.menu">
		<field name="groups_id" eval="[(4,ref('group_hr_recruitment_recruiter'))]" />
	</record>




</odoo>
