<?xml version="1.0"?>
<odoo>
	<record id="set_acc_asset_form" model="ir.ui.view">
		<field name="name">account.asset.properties.form</field>
		<field name="model">account.asset.properties</field>
		<field name="arch" type="xml">
			<form string="Set Accounts">
				<group>
					<group>
						<field name="company_id" options="{'no_create' : True,'no_edit' : True,'no_open':True}" />
					</group>
					<group>
						<field name="account_receivable_id"  domain="[('internal_type', '=', 'receivable'), ('deprecated', '=', False),('company_id', '=', company_id)]"/>
						<field name="account_payable_id"  domain="[('internal_type', '=', 'payable'), ('deprecated', '=', False),('company_id', '=', company_id)]"  />
					</group>
				</group>
				<footer>
					<button name="action_account_property" string="Apply" type="object" class="btn btn-sm btn-primary" />
					<button string="Cancel" class="btn btn-sm btn-default" special="cancel" />
				</footer>
			</form>
		</field>
	</record>

	<record id="action_set_account_property" model="ir.actions.act_window">
		<field name="name">Partner &amp; Account Properties</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">account.asset.properties</field>
		<field name="view_mode">form</field>
		<field name="view_id" ref="set_acc_asset_form" />
		<field name="target">new</field>
	</record>
</odoo>