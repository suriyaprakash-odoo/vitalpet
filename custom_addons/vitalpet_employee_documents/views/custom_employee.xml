<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="view_employee_form_inherited_new" model="ir.ui.view">
			<field name="name">hr.employee.inherited</field>
			<field name="model">hr.employee.document</field>
			<field name="inherit_id" ref="employee_documents_expiry.employee_document_form_view" />
			<field name="arch" type="xml">
                <xpath expr="//field[@name='document_name']" position="after">
                    <field name="document_temp" invisible="1" groups="vitalpet_employee_documents.group_employee_documents_manager"/>
                </xpath>
                <xpath expr="//field[@name='expiry_date']" position="after">
                    <field name="is_active" groups="vitalpet_employee_documents.group_employee_documents_manager" />
                </xpath> 
                <xpath expr="//sheet/group[1]" position='before'>
                    <div class="oe_button_box" name="button_box">
                        <button name="open_document" string="See Document Template" type="object" class="oe_stat_button" style="text-align:center"/>
                    </div>
                </xpath>
                <xpath expr="//field[@name='doc_attachment_id']" position="attributes">
                    <attribute name="string">Add Attachment</attribute>
                </xpath>
                <xpath expr="//sheet" position='after'>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </xpath>
                <!-- <field name="document_name" position="attributes">
                    <attribute name="options">{'no_open': True,'create_edit,': True,'no_create': True}
                    </attribute>
                </field> -->
			</field>
		</record>
		<record id="view_employee_tree_inherited_new" model="ir.ui.view">
			<field name="name">hr.employee.inherited.tree</field>
			<field name="model">hr.employee.document</field>
			<field name="inherit_id" ref="employee_documents_expiry.employee_document_tree_view" />
			<field name="arch" type="xml">
                <xpath expr="//field[@name='issue_date']" position="before">
                    <field name="document_name" string="Document Name"/>
                </xpath> 
                 <xpath expr="//field[@name='expiry_date']" position="after">
                    <field name="type_id" />
                    <field name="state" string="Status"/>
                    <field name="encrypt_id" /> 
                </xpath>
                <xpath expr="//field[@name='name']" position="before">
                    <field name="emp_name"/>
                </xpath> 
			</field>
		</record>
		
		<record id="act_employee_document_tree_view" model="ir.actions.act_window">
            <field name="name">Documents</field>
            <field name="res_model">hr.employee.document</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_emp_name': [active_id], 'default_emp_name': active_id}</field>
        </record>
		
		<record id="hr_employee_documents_inherited_view" model="ir.ui.view">
            <field name="name">hr.employee.documents.action</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="employee_documents_expiry.hr_employee_document_inherit_form_view"/>
            <field name="arch" type="xml">
         <xpath expr="//button[@name='document_view']" position="replace">  
	                <button class="oe_stat_button" name="%(act_employee_document_tree_view)d" type="action" icon="fa-list-ol">
	                    <field string="Documents" name="document_count" widget="statinfo"/>
	            </button>
              </xpath>
            </field>
        </record> 
		
		 <record id="view_hr_employee_document" model="ir.ui.view">
            <field name="name">hr.employee.document</field>
            <field name="model">hr.employee.document</field>
            <field name="arch" type="xml">
                <search string="Documents">
                    <field name="emp_name" context="{'search':'emp_name'}"/>
                    <field name="name"/>
                    <field name="type_id"/>
                    <field name="seniority_id"/>
                    <filter string="Active" name="is_active" domain="[('is_active', '=', True)]" />
                    <filter string="Expired" domain="[('is_active', '=', False)]" name = "is_active"/>
                    <filter string="Entry Process" domain="[('type_id', '=', 'entry')]" name = "type_id"/>
                    <filter string="Exit Process" domain="[('type_id', '=', 'exit')]" name = "type_id"/>
                    <filter string="License" domain="[('type_id', '=', 'license')]" name = "type_id"/>
                    <filter string="Skills" domain="[('type_id', '=', 'skill')]" name = "type_id"/>
                    <filter string="Disciplinary" domain="[('type_id', '=', 'disciplinary')]" name = "type_id"/>
                    <filter string="Other" domain="[('type_id', '=', 'other')]" name = "type_id"/>
                    <separator/>
                    <group expand="0" string="Group By...">
                        <filter name="emp_name" string="Employee Name" context="{'group_by':'emp_name'}"/>
                        <filter name="type_id" string="Type"  context="{'group_by':'type_id'}"/>
                        <filter name="seniority_id" string="Job Seniority Title"  context="{'group_by':'seniority_id'}"/>
                        <filter name="position_id" string="Job Position"  context="{'group_by':'position_id'}"/>
                    </group>
                </search>
            </field>
        </record>
    </data>
</odoo>

